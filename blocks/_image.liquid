{% render 'block-padding', block: block %}
{% style %}
  .block-{{ block.id }}-padding figure{
    max-width:{{block.settings.width }}px;
  }
{% endstyle %}
<div
  class="w-full image-block block-{{ block.id }}-padding {{ block.settings.alignment }} {{ block.settings.alignment_mobile }}"
  {{ block.shopify_attributes }}
>
  {%- if block.settings.image != blank -%}
    <figure class="dbtfy-image--block ">
      {{
        block.settings.image
        | image_url: width: 1206
        | image_tag: widths: '246, 493, 600, 713, 823, 990, 1100, 1206'
      }}
    </figure>
  {%- else -%}
    <figure class="dbtfy-image--block {{ block.settings.alignment }} {{ block.settings.alignment_mobile }}">
      {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </figure>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "t:general.settings.image",
  "class": "w-full",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:general.settings.image"
    },
    {
      "type": "range",
      "id": "width",
      "label": "t:general.settings.width",
      "default": 100,
      "min": 50,
      "max": 400,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "t:general.settings.alignment.label",
      "default": "text-left",
      "options": [
        {
          "value": "text-left",
          "label": "t:general.settings.alignment.option__4"
        },
        {
          "value": "text-center",
          "label": "t:general.settings.alignment.option__5"
        },
        {
          "value": "text-right",
          "label": "t:general.settings.alignment.option__6"
        }
      ]
    },
    {
      "type": "select",
      "id": "alignment_mobile",
      "label": "t:general.settings.alignment.label_mobile",
      "default": "",
      "options": [
        {
          "value": "",
          "label": "t:general.settings.alignment.option__12"
        },
        { "value": "mobile-text-left", "label": "t:general.settings.alignment.option__4" },
        { "value": "mobile-text-center", "label": "t:general.settings.alignment.option__5" },
        { "value": "mobile-text-right", "label": "t:general.settings.alignment.option__6" },
        { "value": "mobile-text-justify", "label": "t:general.settings.alignment.option__7" }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.block_padding.block_padding_heading"
    },
    {
      "type": "select",
      "id": "padding___top",
      "label": "t:sections.all.padding_section.padding.padding_top",
      "default": "none",
      "options": [
        {
          "value": "none",
          "label": "t:general.settings.size.option__2"
        },
        {
          "value": "small",
          "label": "t:general.settings.size.option__3"
        },
        {
          "value": "extra_small",
          "label": "t:general.settings.size.option__4"
        },
        {
          "value": "medium",
          "label": "t:general.settings.size.option__5"
        },
        {
          "value": "large",
          "label": "t:general.settings.size.option__6"
        },
        {
          "value": "extra_large",
          "label": "t:general.settings.size.option__7"
        },
        {
          "value": "custom",
          "label": "t:general.settings.size.option__9"
        }
      ]
    },
    {
      "type": "range",
      "id": "custom_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding_section.custom_padding.padding_top",
      "default": 36
    },
    {
      "type": "select",
      "id": "padding___bottom",
      "label": "t:sections.all.padding_section.padding.padding_bottom",
      "default": "none",
      "options": [
        {
          "value": "none",
          "label": "t:general.settings.size.option__2"
        },
        {
          "value": "small",
          "label": "t:general.settings.size.option__3"
        },
        {
          "value": "extra_small",
          "label": "t:general.settings.size.option__4"
        },
        {
          "value": "medium",
          "label": "t:general.settings.size.option__5"
        },
        {
          "value": "large",
          "label": "t:general.settings.size.option__6"
        },
        {
          "value": "extra_large",
          "label": "t:general.settings.size.option__7"
        },
        {
          "value": "custom",
          "label": "t:general.settings.size.option__9"
        }
      ]
    },
    {
      "type": "range",
      "id": "custom_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding_section.custom_padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [{ "name": "t:general.settings.image" }]
}
{% endschema %}
