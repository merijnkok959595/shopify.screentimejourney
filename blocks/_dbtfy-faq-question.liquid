<div
  class="grid--12-col"
  {{ block.shopify_attributes }}
>
  <div
    class="dbtfy-faq-question-wrapper {% if block.settings.open_by_default %} dbtfy-faq-active{% endif %}"
  >
    <div
      class="dbtfy-faq-question-block"
    >
      {%- if block.settings.icon != blank -%}
        {% render 'material-icon', icon: block.settings.icon %}
      {%- endif -%}

      <h3 class="dbtfy-faq-question">{{ block.settings.question }}</h3>
      <div class="dbtfy-faq-icon-group">
        <span class="dbtfy-faq-icon-add">
          {% render 'material-icon', icon: 'add' %}
        </span>
        <span class="dbtfy-faq-icon-remove">
          {% render 'material-icon', icon: 'remove' %}
        </span>
      </div>
    </div>

    <div
      class="dbtfy-faq-answer-block"
    >
      <div class="rte {{ section.settings.text_alignment }} mobile-{{ section.settings.text_alignment_mobile }}">
        {{ block.settings.answer }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Blocks",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.block-name.label",
      "info": "t:general.settings.block-name.info"
    },

    {
      "type": "checkbox",
      "id": "open_by_default",
      "label": "t:sections.dbtfy-faq.blocks.dbtfy-faq.settings.question_answer.label",
      "default": false
    },
    {
      "type": "inline_richtext",
      "id": "question",
      "label": "t:sections.dbtfy-faq.blocks.dbtfy-faq.settings.question.label",
      "default": "t:sections.dbtfy-faq.blocks.dbtfy-faq.settings.question.label"
    },
    {
      "type": "richtext",
      "id": "answer",
      "label": "t:sections.dbtfy-faq.blocks.dbtfy-faq.settings.answer.label",
      "default": "t:sections.dbtfy-faq.blocks.dbtfy-faq.settings.answer.default"
    },
    {
      "type": "text",
      "id": "icon",
      "label": "t:sections.dbtfy-faq.blocks.dbtfy-faq.settings.question_icon.label",
      "info": "t:sections.all.icon.info"
    }
  ],
  "presets": [
    {
      "name": "Faq Questions"
    }
  ]
}
{% endschema %}
