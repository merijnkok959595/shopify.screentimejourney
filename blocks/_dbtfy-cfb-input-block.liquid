<div
  class="{% if block.settings.width_input == 'full-width' %}grid--12-col{% else %}grid--6-col{% endif %}"
  {{ block.shopify_attributes }}
>
  <div class="field">
    <input
      class="field__input"
      type="text"
      id="ContactForm-{{ block.settings.label | handleize }}"
      name="contact[{{ block.settings.label | handleize }}]"
      placeholder="{{ block.settings.label }}"
      {% if block.settings.required %}
        required
      {% endif %}
    >
    <label class="field__label" for="ContactForm-{{ block.settings.label | handleize }}">
      {{ block.settings.label }}
      {% if block.settings.required %}
        <span aria-hidden="true">*</span>
      {% endif %}
    </label>
  </div>
  {% if block.settings.required %}
    <small class="error-message w-100 hidden">
      <span class="svg-wrapper">
        {{- 'icon-error.svg' | inline_asset_content -}}
      </span>
      <span class="error-message-text"> {{ block.settings.error_message }} </span>
    </small>
  {% endif %}
</div>

{% schema %}
{
  "name": "Input",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.block-name.label",
      "info": "t:general.settings.block-name.info"
    },
    {
      "type": "text",
      "id": "label",
      "label": "t:general.settings.label",
      "default": "Your Name"
    },
    {
      "type": "checkbox",
      "id": "required",
      "label": "t:general.settings.require",
      "default": true,
      "info": "t:sections.dbtfy-contact-form-builder.blocks.input.settings.required.info"
    },
    {
      "type": "select",
      "id": "width_input",
      "label": "t:sections.dbtfy-contact-form-builder.blocks.input.settings.width_input.label",
      "default": "half-width",
      "options": [
        {
          "value": "full-width",
          "label": "t:sections.dbtfy-contact-form-builder.blocks.input.settings.width_input.options__1.label"
        },
        {
          "value": "half-width",
          "label": "t:sections.dbtfy-contact-form-builder.blocks.input.settings.width_input.options__2.label"
        }
      ]
    },
    {
      "type": "text",
      "id": "error_message",
      "label": "t:sections.dbtfy-contact-form-builder.blocks.error_label",
      "default": "t:sections.dbtfy-contact-form-builder.blocks.input.settings.input_error"
    }
  ],
  "presets": [
    {
      "name": "Input"
    }
  ]
}
{% endschema %}
