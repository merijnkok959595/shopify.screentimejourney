  "name": "t:sections.footer.blocks.brand_information.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.block_padding.block_padding_heading"
    },
    {
      "type": "select",
      "id": "padding___top",
      "label": "t:sections.all.padding_section.padding.padding_top",
      "default": "inherit",
      "options": [
