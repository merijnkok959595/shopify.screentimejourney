<script>
  // Dashboard functionality
  document.addEventListener('DOMContentLoaded', function() {
    if (document.querySelector('.screentime-dashboard')) {
      loadDashboardData();
      initializeCharts();
    }
  });

  const API_BASE = 'https://3angppkge5.execute-api.eu-north-1.amazonaws.com/default/mk_shopify_web_app/dashboard-api';
  
  // Get customer email from Shopify customer object
  const customerEmail = '{{ customer.email }}';
  
  function loadDashboardData() {
    if (!customerEmail) {
      console.error('No customer email available');
      return;
    }
    
    // Load stats
    loadStats();
    // Load time limits
    loadTimeLimits();
    // Load weekly report
    loadWeeklyReport();
  }

  function loadStats() {
    fetch(API_BASE, {
      method: 'POST',
      headers: {
