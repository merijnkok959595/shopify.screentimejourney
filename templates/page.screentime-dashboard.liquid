  function saveTimeLimit() {
    const appName = document.getElementById('app-name').value;
    const timeLimit = document.getElementById('time-limit').value;
    const limitType = document.getElementById('limit-type').value;

    if (!appName || !timeLimit) {
      alert('Please fill in all required fields');
      return;
    }

    fetch(API_BASE, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        action: 'add_time_limit',
        customer_email: customerEmail,
        app_name: appName,
        daily_limit: parseInt(timeLimit),
        limit_type: limitType
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        alert('Time limit added successfully!');
        closeModal();
        loadTimeLimits(); // Reload the list
      } else {
        alert('Failed to add time limit: ' + (data.error || 'Unknown error'));
      }
    })
    .catch(error => {
      console.error('Error saving time limit:', error);
      alert('Failed to save time limit. Please try again.');
    });
  }

