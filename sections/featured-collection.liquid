      "default": "both"
    },
    {
      "type": "select",
      "id": "container_size",
      "label": "t:sections.all.container_size.label",
      "info": "t:sections.featured-collection.settings.page_width_info.content",
      "default": "page-width",
      "options": [
        {
          "value": "page-width",
