{% if request.design_mode or settings.dbtfy_featured_product %}
  <dbtfy-featured-product>
    {%- liquid
      render 'widget-blocker', section: section, enabled: settings.dbtfy_featured_product, name: 'Featured product', type: 'âš¡ Paid Sections'

      render 'custom-arrow-style'

      unless section.settings.product == blank
        assign product = section.settings.product
      endunless

      capture block_content
        content_for 'blocks'
      endcapture

      render 'main-product', product: product, url_should_update: false, block_content: block_content
    -%}
  </dbtfy-featured-product>
{% endif %}

